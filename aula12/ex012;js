var agora = new Date()
var hora = agora.getHours()
var min = agora.getMinutes()
var sec = agora.getSeconds()
console.log(`Agora sÃ£o exatamente ${hora}h ${min}m ${sec}s.`)
if (hora >= 5 && hora < 12) {
    console.log('Bom dia!')
} else if (hora < 18) {
    console.log('Boa tarde!')
} else if (hora < 23) {
    console.log ('Boa noite')
} else {
    console.log ('Boa madrugada')
}